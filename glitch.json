{
  "install": "npm install && cd backend && pip install -r requirements.txt",
  "start": "./start.sh",
  "watch": {
    "ignore": ["node_modules", "*.pyc", "_pycache_"],
    "install": {
      "include": ["package.json", "backend/requirements.txt"]
    },
    "restart": {
      "include": ["start.sh", "frontend/src/**/*.js", "backend/**/*.py"]
    },
    "throttle": 3000
  },
  "env": {
    "FASTAPI_HOST": "0.0.0.0",
    "FASTAPI_PORT": "8000",
    "REACT_PORT": "3000"
  }
}
